<Window x:Class="GAPPSF.Dialogs.SelectActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:GAPPSF.Localization"
        Title="{l:Translate SelectAction}" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TreeView Grid.Row="0" x:Name="treeView" SelectedItemChanged="treeView_SelectedItemChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Button x:Name="okButton" Grid.Row="1" Margin="4,14,4,4" Content="{l:Translate OK}" Width="100" Click="okButton_Click" />
    </Grid>
</Window>
