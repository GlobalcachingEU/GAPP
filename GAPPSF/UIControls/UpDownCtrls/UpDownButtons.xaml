<UserControl x:Class="GAPPSF.UIControls.UpDownButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GAPPSF.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="18"
             MinWidth="18" MaxWidth="18">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:ArrowRepeatButton x:Name="UpButton" Grid.Row="0" Click="UpButton_Click" ButtonArrowType="Up" IsCornerCtrlCorner="False,True,False,False"/>
        <local:ArrowRepeatButton x:Name="DownButton" Grid.Row="1" Click="DownButton_Click" ButtonArrowType="Down" IsCornerCtrlCorner="False,False,True,False"/>
   </Grid>
</UserControl>