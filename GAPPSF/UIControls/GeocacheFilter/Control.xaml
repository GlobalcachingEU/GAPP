<UserControl x:Class="GAPPSF.UIControls.GeocacheFilter.Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:GAPPSF.Localization"
             xmlns:p="clr-namespace:GAPPSF.Core"
             xmlns:ui="clr-namespace:GAPPSF.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <Grid>
        <Grid.Resources>
            <ui:EnumBooleanConverter x:Key="enumBooleanConverter" />
        </Grid.Resources>
        <StackPanel HorizontalAlignment="Stretch">
            <ui:SelectionContext x:Name="selectionContext" />
            <Expander Header="{l:Translate Status}" IsExpanded="{Binding GeocacheFilterStatusExpanded, Source={x:Static p:Settings.Default}}">
                <Expander.Content>
                    <StackPanel>
                        <RadioButton GroupName="rstatus" Content="{l:Translate Enabled}" IsChecked="{Binding Path=SelectedContext, Converter={StaticResource enumBooleanConverter}, ConverterParameter=NewSelection, Mode=TwoWay}" />
                        <RadioButton GroupName="rstatus" Content="{l:Translate Disabled}" IsChecked="{Binding GeocacheFilterStatusDisabled, Source={x:Static p:Settings.Default}}" />
                        <RadioButton GroupName="rstatus" Content="{l:Translate Archived}" IsChecked="{Binding GeocacheFilterStatusArchived, Source={x:Static p:Settings.Default}}" />
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </StackPanel>    
    </Grid>
</UserControl>
